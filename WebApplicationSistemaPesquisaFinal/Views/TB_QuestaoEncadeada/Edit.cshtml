@model WebApplicationSistemaPesquisaFinal.Models.TB_QuestaoEncadeada

@{
    ViewBag.Title = "Editar Questão Encadeada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Questão Encadeada</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>TB_QuestaoEncadeada</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QuestaoEncadeadaId)

        <div class="form-group">
            @Html.LabelFor(model => model.PesquisaId, "Pesquisa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PesquisaId", null, htmlAttributes: new { @class = "form-control", @onchange = "UpdateQuestion(this.value)" })
                @Html.ValidationMessageFor(model => model.PesquisaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QuestaoId, "Questão", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("QuestaoId", null, htmlAttributes: new { @class = "form-control", @onchange = "UpdateAlternative(this.value)" })
                @Html.ValidationMessageFor(model => model.QuestaoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AlternativaId, "Alternativa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AlternativaId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AlternativaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AcaoId, "Ação", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AcaoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AcaoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/script.js")
}
