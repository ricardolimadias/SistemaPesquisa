@model WebApplicationSistemaPesquisaFinal.Models.TB_Alternativas

@{
    ViewBag.Title = "Nova Alternativa";
}
<h2>Nova Alternativa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Pesquisa</label>
            <div class="col-md-10">
                @Html.DropDownList("PesquisaId", null, htmlAttributes: new { @class = "form-control", @onchange = "UpdateQuestion(this.value)" })
                @Html.ValidationMessageFor(model => model.TB_Questoes.TB_Pesquisa.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Questão</label>
            <div class="col-md-10">
                @Html.DropDownList("QuestaoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QuestaoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Alternativa</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Alternativa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Alternativa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Index")
</div>

@section scripts{
    <script src="~/Scripts/script.js"></script>
}
